[Unit]
Description=Apache NiFi ({{ nifi_identifier }})
{% for service in nifi_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in nifi_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ nifi_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ nifi_identifier }} 2>/dev/null || true'

ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
      --rm \
      --name={{ nifi_identifier }} \
      --log-driver=none \
      --user={{ nifi_uid }}:{{ nifi_gid }} \
      --cap-drop=ALL \
      --cap-add=DAC_OVERRIDE \
      --network={{ nifi_container_network }} \
      {% if nifi_container_https_host_bind_port %}
      -p {{ nifi_container_https_host_bind_port }}:{{ nifi_container_https_port }} \
      {% endif %}
      --env-file={{ nifi_base_path }}/env \
      --label-file={{ nifi_base_path }}/labels \
      --mount type=bind,src={{ nifi_data_path }}/database_repository,dst=/opt/nifi/nifi-current/database_repository \
      --mount type=bind,src={{ nifi_data_path }}/flowfile_repository,dst=/opt/nifi/nifi-current/flowfile_repository \
      --mount type=bind,src={{ nifi_data_path }}/content_repository,dst=/opt/nifi/nifi-current/content_repository \
      --mount type=bind,src={{ nifi_data_path }}/provenance_repository,dst=/opt/nifi/nifi-current/provenance_repository \
      --mount type=bind,src={{ nifi_data_path }}/state,dst=/opt/nifi/nifi-current/state \
      --mount type=bind,src={{ nifi_data_path }}/logs,dst=/opt/nifi/nifi-current/logs \
      --mount type=bind,src={{ nifi_data_path }}/conf,dst=/opt/nifi/nifi-current/conf \
      --mount type=bind,src={{ nifi_certs_path }},dst=/opt/nifi/nifi-current/certs \
      --mount type=bind,src={{ nifi_scripts_path }},dst=/opt/nifi/scripts \
      {% for volume in nifi_container_additional_volumes %}
      --mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options else '' }} \
      {% endfor %}
      {% for arg in nifi_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ nifi_container_image_self_build_name if nifi_container_image_self_build else nifi_container_image }}

{% for network in nifi_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ nifi_identifier }}
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ nifi_identifier }}

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ nifi_identifier }} 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ nifi_identifier }} 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ nifi_identifier }}

[Install]
WantedBy=multi-user.target
