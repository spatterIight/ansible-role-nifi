{% if answer_container_labels_traefik_enabled %}
traefik.enable=true

{% if answer_container_labels_traefik_docker_network %}
traefik.docker.network={{ answer_container_labels_traefik_docker_network }}
{% endif %}

{% set middlewares = [] %}

{% if answer_container_labels_traefik_path_prefix != '/' %}
traefik.http.middlewares.{{ answer_identifier }}-slashless-redirect.redirectregex.regex=^({{ answer_container_labels_traefik_path_prefix | quote }})$
traefik.http.middlewares.{{ answer_identifier }}-slashless-redirect.redirectregex.replacement=${1}/
{% set middlewares = middlewares + [answer_identifier + '-slashless-redirect'] %}
{% endif %}

{% if answer_container_labels_traefik_path_prefix != '/' %}
traefik.http.middlewares.{{ answer_identifier }}-strip-prefix.stripprefix.prefixes={{ answer_container_labels_traefik_path_prefix }}
{% set middlewares = middlewares + [answer_identifier + '-strip-prefix'] %}
{% endif %}

{% if answer_container_labels_traefik_additional_request_headers.keys() | length > 0 %}
{% for name, value in answer_container_labels_traefik_additional_request_headers.items() %}
traefik.http.middlewares.{{ answer_identifier }}-add-request-headers.headers.customrequestheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [answer_identifier + '-add-request-headers'] %}
{% endif %}

{% if answer_container_labels_traefik_additional_response_headers.keys() | length > 0 %}
{% for name, value in answer_container_labels_traefik_additional_response_headers.items() %}
traefik.http.middlewares.{{ answer_identifier }}-add-response-headers.headers.customresponseheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [answer_identifier + '-add-response-headers'] %}
{% endif %}

traefik.http.routers.{{ answer_identifier }}.rule={{ answer_container_labels_traefik_rule }}
{% if answer_container_labels_traefik_priority | int > 0 %}
traefik.http.routers.{{ answer_identifier }}.priority={{ answer_container_labels_traefik_priority }}
{% endif %}
traefik.http.routers.{{ answer_identifier }}.service={{ answer_identifier }}
{% if middlewares | length > 0 %}
traefik.http.routers.{{ answer_identifier }}.middlewares={{ middlewares | join(',') }}
{% endif %}
traefik.http.routers.{{ answer_identifier }}.entrypoints={{ answer_container_labels_traefik_entrypoints }}
traefik.http.routers.{{ answer_identifier }}.tls={{ answer_container_labels_traefik_tls | to_json }}
{% if answer_container_labels_traefik_tls %}
traefik.http.routers.{{ answer_identifier }}.tls.certResolver={{ answer_container_labels_traefik_tls_certResolver }}
{% endif %}

traefik.http.services.{{ answer_identifier }}.loadbalancer.server.port={{ answer_container_http_port }}
{% endif %}

{{ answer_container_labels_additional_labels }}
