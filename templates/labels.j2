{% if nifi_container_labels_traefik_enabled %}
traefik.enable=true

{% if nifi_container_labels_traefik_docker_network %}
traefik.docker.network={{ nifi_container_labels_traefik_docker_network }}
{% endif %}

{% set middlewares = [] %}

{% if nifi_container_labels_traefik_path_prefix != '/' %}
traefik.http.middlewares.{{ nifi_identifier }}-slashless-redirect.redirectregex.regex=^({{ nifi_container_labels_traefik_path_prefix | quote }})$
traefik.http.middlewares.{{ nifi_identifier }}-slashless-redirect.redirectregex.replacement=${1}/
{% set middlewares = middlewares + [nifi_identifier + '-slashless-redirect'] %}
{% endif %}

{% if nifi_container_labels_traefik_path_prefix != '/' %}
traefik.http.middlewares.{{ nifi_identifier }}-strip-prefix.stripprefix.prefixes={{ nifi_container_labels_traefik_path_prefix }}
{% set middlewares = middlewares + [nifi_identifier + '-strip-prefix'] %}
{% endif %}

{% if nifi_container_labels_traefik_additional_request_headers.keys() | length > 0 %}
{% for name, value in nifi_container_labels_traefik_additional_request_headers.items() %}
traefik.http.middlewares.{{ nifi_identifier }}-add-request-headers.headers.customrequestheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [nifi_identifier + '-add-request-headers'] %}
{% endif %}

{% if nifi_container_labels_traefik_additional_response_headers.keys() | length > 0 %}
{% for name, value in nifi_container_labels_traefik_additional_response_headers.items() %}
traefik.http.middlewares.{{ nifi_identifier }}-add-response-headers.headers.customresponseheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [nifi_identifier + '-add-response-headers'] %}
{% endif %}

traefik.http.routers.{{ nifi_identifier }}.rule={{ nifi_container_labels_traefik_rule }}
{% if nifi_container_labels_traefik_priority | int > 0 %}
traefik.http.routers.{{ nifi_identifier }}.priority={{ nifi_container_labels_traefik_priority }}
{% endif %}
traefik.http.routers.{{ nifi_identifier }}.service={{ nifi_identifier }}
{% if middlewares | length > 0 %}
traefik.http.routers.{{ nifi_identifier }}.middlewares={{ middlewares | join(',') }}
{% endif %}
traefik.http.routers.{{ nifi_identifier }}.entrypoints={{ nifi_container_labels_traefik_entrypoints }}
traefik.http.routers.{{ nifi_identifier }}.tls={{ nifi_container_labels_traefik_tls | to_json }}
{% if nifi_container_labels_traefik_tls %}
traefik.http.routers.{{ nifi_identifier }}.tls.certResolver={{ nifi_container_labels_traefik_tls_certResolver }}
{% endif %}

traefik.http.services.{{ nifi_identifier }}.loadbalancer.server.port={{ nifi_container_https_port }}
{% endif %}

{{ nifi_container_labels_additional_labels }}
