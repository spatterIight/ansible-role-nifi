TZ={{ answer_environment_variables_tz }}

INSTALL_PORT={{ answer_container_http_port }}
AUTO_INSTALL={{ answer_environment_variables_auto_install | to_json }}

{% if answer_environment_variables_auto_install %}

{% if answer_database_type == 'sqlite' %}
DB_TYPE=sqlite3
DB_FILE={{ answer_database_filename }}
{% endif %}

{% if answer_database_type == 'mysql' %}
DB_TYPE=mysql
DB_HOST={{ answer_database_mysql_hostname }}:{{ answer_database_mysql_port }}
DB_USERNAME={{ answer_database_mysql_username }}
DB_PASSWORD={{ answer_database_mysql_password }}
DB_NAME={{ answer_database_name }}
{% endif %}

{% if answer_database_type == 'postgres' %}
DB_TYPE=postgres
DB_HOST={{ answer_database_postgres_hostname }}:{{ answer_database_postgres_port }}
DB_USERNAME={{ answer_database_postgres_username }}
DB_PASSWORD={{ answer_database_postgres_password }}
DB_NAME={{ answer_database_name }}
{% endif %}

LANGUAGE={{ answer_environment_variables_language }}

SITE_NAME={{ answer_environment_variables_site_name }}

SITE_URL={{ answer_scheme }}://{{ answer_hostname }}{% if answer_path_prefix != '/' %}{{ answer_path_prefix }}{% endif %}

CONTACT_EMAIL={{ answer_environment_variables_contact_email }}

ADMIN_NAME={{ answer_environment_variables_admin_name }}

ADMIN_PASSWORD={{ answer_environment_variables_admin_password }}

ADMIN_EMAIL={{ answer_environment_variables_admin_email }}

EXTERNAL_CONTENT_DISPLAY={{ answer_environment_variables_external_content_display }}

{% endif %}

LOG_LEVEL={{ answer_environment_variables_log_level }}

{{ answer_environment_variables_additional_variables }}
