TZ={{ nifi_environment_variables_tz }}

INSTALL_PORT={{ nifi_container_http_port }}
AUTO_INSTALL={{ nifi_environment_variables_auto_install | to_json }}

{% if nifi_environment_variables_auto_install %}

{% if nifi_database_type == 'sqlite' %}
DB_TYPE=sqlite3
DB_FILE={{ nifi_database_filename }}
{% endif %}

{% if nifi_database_type == 'mysql' %}
DB_TYPE=mysql
DB_HOST={{ nifi_database_mysql_hostname }}:{{ nifi_database_mysql_port }}
DB_USERNAME={{ nifi_database_mysql_username }}
DB_PASSWORD={{ nifi_database_mysql_password }}
DB_NAME={{ nifi_database_name }}
{% endif %}

{% if nifi_database_type == 'postgres' %}
DB_TYPE=postgres
DB_HOST={{ nifi_database_postgres_hostname }}:{{ nifi_database_postgres_port }}
DB_USERNAME={{ nifi_database_postgres_username }}
DB_PASSWORD={{ nifi_database_postgres_password }}
DB_NAME={{ nifi_database_name }}
{% endif %}

LANGUAGE={{ nifi_environment_variables_language }}

SITE_NAME={{ nifi_environment_variables_site_name }}

SITE_URL={{ nifi_scheme }}://{{ nifi_hostname }}{% if nifi_path_prefix != '/' %}{{ nifi_path_prefix }}{% endif %}

CONTACT_EMAIL={{ nifi_environment_variables_contact_email }}

ADMIN_NAME={{ nifi_environment_variables_admin_name }}

ADMIN_PASSWORD={{ nifi_environment_variables_admin_password }}

ADMIN_EMAIL={{ nifi_environment_variables_admin_email }}

EXTERNAL_CONTENT_DISPLAY={{ nifi_environment_variables_external_content_display }}

{% endif %}

LOG_LEVEL={{ nifi_environment_variables_log_level }}

{{ nifi_environment_variables_additional_variables }}
